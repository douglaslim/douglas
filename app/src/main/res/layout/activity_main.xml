<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.edu.tarc.helloworld.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/TextViewMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonShowMessage"
        android:text="@string/click_me"
        android:onClick="showMessage" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:id="@+id/ratingBar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app2:srcCompat="@drawable/gg"
        android:layout_below="@+id/TextViewMessage"
        android:layout_alignLeft="@+id/buttonShowMessage"
        android:layout_alignStart="@+id/buttonShowMessage"
        android:layout_marginTop="73dp"
        android:id="@+id/imageView_gg" />

    <Button
        android:text="Gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShowMessage"
        android:layout_alignLeft="@+id/buttonShowMessage"
        android:layout_alignStart="@+id/buttonShowMessage"
        android:id="@+id/buttonHideMessage"
        android:layout_alignRight="@+id/buttonShowMessage"
        android:layout_alignEnd="@+id/buttonShowMessage"
        android:onClick="hideMessage" />

</RelativeLayout>
